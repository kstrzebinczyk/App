@model App.Models.UserModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}


<form action="/home/SignUp" method="post" ninput='RepeatPassword.setCustomValidity(RepeatPassword.value != InputPassword.value ? "Hasła nie są takie same" : "")'>
  <div class="form-group">
    <label for="InputEmail">Email</label>
    <input type="email" class="form-control" id="InputEmail" placeholder="nazwa@domena.com" asp-for="Email">
    <span asp-validation-for="Email" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label for="Username">Nazwa użytkownika</label>
    <input type="text" class="form-control" id="Username" placeholder="Login" asp-for="Login">
    <span asp-validation-for="Login" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label for="InputPassword">Hasło</label>
    <input type="password" class="form-control" id="InputPassword" asp-for="Password">
    <span asp-validation-for="Password" class="text-danger"></span>
  </div>
  <div class="form-group form-check">
    <input type="checkbox" class="form-check-input" id="Check">
    <label class="form-check-label" for="Check">Przeczytałem i akceptuję ogólne warunki korzystania z serwisu</label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>


